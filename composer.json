{
    "name": "dcornu-cap/drupal-heroku",
    "description": "Drupal 8 / Postgres for Heroku deployment",
    "repositories": [
      {
        "type": "composer",
        "url": "https://packagist.drupal-composer.org"
      }
    ],
    "require": {
        "php": "~7.0",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*",
        "ext-pgsql": "*",
        "ext-xml": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-mbstring": "*"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Damien Cornu",
            "email": "damien.cornu@capgemini.com"
        }
    ],
    "bin": [
        "vendor/bin/drush",
        "vendor/bin/drush.complete.sh",
        "vendor/bin/drush.php"
    ],
    "scripts": {
        "post-install-cmd": [
            "scripts/deploy.sh"
        ]
    }
}
